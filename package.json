        "onCommand:azIntegrationAccounts.viewMapProperties",
        "onCommand:azIntegrationAccounts.viewPartnerProperties",
        "onCommand:azIntegrationAccounts.viewSchemaProperties",
        "onView:azureIntegrationAccountsExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "category": "Azure Logic Apps",
                "command": "azureLogicApps.createLogicApp",
                "icon": {
                    "dark": "resources/dark/CreateLogicApp.svg",
                    "light": "resources/light/CreateLogicApp.svg"
