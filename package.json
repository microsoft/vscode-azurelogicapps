        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "icon": "resources/azure.svg",
                    "id": "azure",
                    "title": "Azure"
                }
            ]
        },
        "views": {
            "azure": [
                {
                    "id": "azureLogicAppsExplorer",
                    "name": "Logic Apps",
                    "when": "config.azureLogicApps.showExplorer == true"
                },
                {
                    "id": "azureIntegrationAccountsExplorer",
                    "name": "Integration Accounts",
                    "when": "config.azureLogicApps.showExplorer == true"
                }
            ]
        },
        "menus": {
            "commandPalette": [
                {
                    "command": "azureLogicApps.loadMore",
                    "when": "never"
                },
                {
                    "command": "azureLogicApps.refresh",
                    "when": "never"
                },
                {
                    "command": "azIntegrationAccounts.loadMore",
                    "when": "never"
                },
                {
                    "command": "azIntegrationAccounts.refresh",
                    "when": "never"
                }
            ],
            "view/item/context": [
                {
                    "command": "azureLogicApps.createLogicApp",
                    "group": "1@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azureextensionui.azureSubscription"
                },
                {
                    "command": "azureLogicApps.openInPortal",
                    "group": "1@2",
                    "when": "view == azureLogicAppsExplorer && viewItem == azureextensionui.azureSubscription"
                },
                {
                    "command": "azureLogicApps.refresh",
                    "group": "2@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azureextensionui.azureSubscription"
                },
                {
                    "command": "azureLogicApps.openInEditor",
                    "group": "inline",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflow"
                },
                {
                    "command": "azureLogicApps.openInEditor",
                    "group": "1@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflow"
                },
                {
                    "command": "azureLogicApps.openInPortal",
                    "group": "1@2",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflow"
                },
                {
                    "command": "azureLogicApps.disableLogicApp",
                    "group": "2@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflow"
                },
                {
                    "command": "azureLogicApps.enableLogicApp",
                    "group": "2@2",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflow"
                },
                {
                    "command": "azureLogicApps.deleteLogicApp",
                    "group": "3@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflow"
                },
                {
                    "command": "azureLogicApps.refresh",
                    "group": "4@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflow"
                },
                {
                    "command": "azureLogicApps.refresh",
                    "group": "1@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflowRuns"
                },
                {
                    "command": "azureLogicApps.openRunInEditor",
                    "group": "1@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflowRun"
                },
                {
                    "command": "azureLogicApps.resubmitRun",
                    "group": "1@2",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflowRun"
                },
                {
                    "command": "azureLogicApps.refresh",
                    "group": "1@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflowRunActions"
                },
                {
                    "command": "azureLogicApps.openRunActionInEditor",
                    "group": "1@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflowRunAction"
                },
                {
                    "command": "azureLogicApps.refresh",
                    "group": "1@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflowTriggers"
                },
                {
                    "command": "azureLogicApps.openTriggerInEditor",
                    "group": "1@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflowTrigger"
                },
                {
                    "command": "azureLogicApps.runTrigger",
                    "group": "1@2",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflowTrigger"
                },
                {
                    "command": "azureLogicApps.refresh",
                    "group": "1@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflowVersions"
                },
                {
                    "command": "azureLogicApps.openVersionInEditor",
                    "group": "1@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflowCurrentVersion"
                },
                {
                    "command": "azureLogicApps.openVersionInEditor",
                    "group": "1@1",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflowVersion"
                },
                {
                    "command": "azureLogicApps.promoteVersion",
                    "group": "1@2",
                    "when": "view == azureLogicAppsExplorer && viewItem == azLogicAppsWorkflowVersion"
                },
                {
                    "command": "azIntegrationAccounts.refresh",
                    "group": "3@1",
                    "when": "view == azureIntegrationAccountsExplorer"
                },
                {
                    "command": "azIntegrationAccounts.createIntegrationAccount",
                    "group": "1@1",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azureextensionui.azureSubscription"
                },
                {
                    "command": "azIntegrationAccounts.viewIntegrationAccountProperties",
                    "group": "1@1",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccount"
                },
                {
                    "command": "azIntegrationAccounts.deleteIntegrationAccount",
                    "group": "2@1",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccount"
                },
                {
                    "command": "azIntegrationAccounts.createMap",
                    "group": "1@1",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccountMaps"
                },
                {
                    "command": "azIntegrationAccounts.openMapInEditor",
                    "group": "1@1",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccountMap"
                },
                {
                    "command": "azIntegrationAccounts.viewMapProperties",
                    "group": "1@2",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccountMap"
                },
                {
                    "command": "azIntegrationAccounts.deleteMap",
                    "group": "2@1",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccountMap"
                },
                {
                    "command": "azIntegrationAccounts.createPartner",
                    "group": "1@1",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccountPartners"
                },
                {
                    "command": "azIntegrationAccounts.openPartnerInEditor",
                    "group": "1@1",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccountPartner"
                },
                {
                    "command": "azIntegrationAccounts.viewPartnerProperties",
                    "group": "1@2",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccountPartner"
                },
                {
                    "command": "azIntegrationAccounts.deletePartner",
                    "group": "2@1",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccountPartner"
                },
                {
                    "command": "azIntegrationAccounts.createSchema",
                    "group": "1@1",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccountSchemas"
                },
                {
                    "command": "azIntegrationAccounts.openSchemaInEditor",
                    "group": "1@1",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccountSchema"
                },
                {
                    "command": "azIntegrationAccounts.viewSchemaProperties",
                    "group": "1@2",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccountSchema"
                },
                {
                    "command": "azIntegrationAccounts.deleteSchema",
                    "group": "2@1",
                    "when": "view == azureIntegrationAccountsExplorer && viewItem == azIntegrationAccountSchema"
                }
            ],
            "view/title": [
                {
                    "command": "azureLogicApps.selectSubscriptions",
                    "group": "navigation@1",
                    "when": "view == azureLogicAppsExplorer"
                },
                {
                    "command": "azureLogicApps.createLogicApp",
                    "group": "navigation@2",                
                    "when": "view == azureLogicAppsExplorer"
                },
                {
                    "command": "azIntegrationAccounts.selectSubscriptions",
                    "group": "navigation@1",
                    "when": "view == azureIntegrationAccountsExplorer"
                }
            ]
        },
        "jsonValidation": [],
        "configuration": [
            {
                "title": "Azure Logic Apps",
                "properties": {
                    "azureLogicApps.showExplorer": {
                        "default": true,
                        "description": "%azLogicApps.showExplorerDescription%",
                        "type": "boolean"
                    },
                    "azureLogicApps.showSavePrompt": {
                        "default": true,
                        "description": "%azLogicApps.showSavePrompt%",
                        "type": "boolean"
                    }
                }
            },
            {
                "title": "Azure Integration Accounts",
                "properties": {
                    "azIntegrationAccounts.showExplorer": {
                        "default": true,
                        "description": "%azIntegrationAccounts.showExplorerDescription%",
                        "type": "boolean"
                    },
                    "azIntegrationAccounts.showSavePrompt": {
                        "default": true,
                        "description": "%azIntegrationAccounts.showSavePrompt%",
                        "type": "boolean"
                    }
                }
            }
        ],
        "snippets": [
            {
                "language": "json",
                "path": "./snippets/logicapps.snippets.json"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "lint": "tslint src/**/*.ts --project tsconfig.json -e src/**/*.d.ts -t verbose",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "vscode:prepublish": "npm run compile",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.48",
        "@types/node": "^7.0.67",
        "@types/request-promise-native": "^1.0.15",
        "tslint": "^5.11.0",
        "typescript": "^3.0.1",
        "vsce": "^1.45.1",
        "vscode": "^1.1.18"
    },
    "dependencies": {
        "azure-arm-logic": "^4.0.0",
        "request": "^2.88.0",
        "request-promise-native": "^1.0.5",
        "vscode-azureextensionui": "^0.16.4",
        "vscode-extension-telemetry": "0.0.15",
        "vscode-nls": "^3.2.4"
    },
    "extensionDependencies": [
        "ms-vscode.azure-account"
    ]
}
