            },
            {
                "category": "Azure Integration Accounts",
                "command": "azIntegrationAccounts.deletePartner",
                "title": "%azIntegrationAccounts.delete%"
            },
            {
                "category": "Azure Integration Accounts",
                "command": "azIntegrationAccounts.deleteSchema",
                "title": "%azIntegrationAccounts.delete%"
            },
            {
                "category": "Azure Integration Accounts",
                "command": "azIntegrationAccounts.loadMore",
                "title": "%azIntegrationAccounts.loadMore%"
            },
            {
                "category": "Azure Integration Accounts",
                "command": "azIntegrationAccounts.openMapInEditor",
