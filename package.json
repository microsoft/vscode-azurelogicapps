                "icon": {
                    "dark": "resources/dark/Filter.svg",
                    "light": "resources/light/Filter.svg"
                },
                "title": "%azLogicApps.selectSubscriptions%"
            },
            {
                "category": "Azure Integration Accounts",
                "command": "azIntegrationAccounts.createIntegrationAccount",
                "title": "%azIntegrationAccounts.new%"
            },
            {
                "category": "Azure Integration Accounts",
                "command": "azIntegrationAccounts.createMap",
                "title": "%azIntegrationAccounts.new%"
            },
            {
                "category": "Azure Integration Accounts",
                "command": "azIntegrationAccounts.createPartner",
                "title": "%azIntegrationAccounts.new%"
            },
            {
